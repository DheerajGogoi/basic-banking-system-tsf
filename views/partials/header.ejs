<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- FONTAWESOME START -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <!-- FONTAWESOME END -->


    <!-- GOOGLE FONTS START -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway&family=Roboto&family=Roboto+Mono&display=swap" rel="stylesheet">
    <!-- GOOGLE FONTS END -->

    <!-- BOOTSTRAP CSS START -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- BOOTSTRAP CSS END -->

    <!-- CUSTOM CSS START -->
    <link rel="stylesheet" href="/css/home.css">
    <!-- CUSTOM CSS END -->

    <title>Basic Banikg system</title>
</head>
<body>
    
     <!-- NAVBAR START -->
     <nav class="navbar navbar-expand-lg navbar-dark bg-color sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">TSF Banking</a>
            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
        
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/customers">Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#exampleModal">Transactions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About</a>
                    </li>
                </ul>
            </div>
        </div>
      </nav>
    <!-- NAVBAR END -->


    <!-- Modal START -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 style="color: black;" class="modal-title" id="exampleModalLabel">Transactions</h5>
            </div>
            <div class="modal-body" style="color: black; height: 30rem; overflow-y: scroll;">
                <%for(var i = Transactions.length-1; i >= 0; i--){%>
                    <div class="trans-info card">
                        <div class="card-body trans-details">
                            <span>Name: <%=Transactions[i].name%></span>
                            <br>
                            <span>Transaction ID: <%=Transactions[i].transid%></span>
                            <br>
                            <span>Amount Transfered: Rs. <%=Transactions[i].amount%></span>
                            <br>
                            <span class="trans-time"><%=Transactions[i].date%></span>
                        </div>
                    </div>
                    <br>
                <%}%>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
            </div>
        </div>
        </div>
    </div>
    <!-- Modal end -->